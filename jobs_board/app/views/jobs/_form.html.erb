<%= simple_form_for(@job, html: { class: 'form-horizontal'}) do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name,
  {prompt: "Choose a category"}, input_html: {class: "dropdown-toggle"} %>
  <%= f.input :title, label: "Job Title", input_html: {class: "form-control"} %>
  <%= f.input :city, label: "City", input_html: {class: "form-control"} %>
  <%= f.select :state, options_for_select(us_states),{}, label: "State", class: 'form-control' %>
  <%= f.input :min_salary, label: "What is the minimum salary?", input_html: {class: "form-control"} %>
  <%= f.input :max_salary, label: "What is the maximum salary?", input_html: {class: "form-control"} %>
  <%= f.input :description, label: "Job Description", input_html: {class: "form-control"} %>
  <%= f.input :url, label: "Link to Job", input_html: {class: "form-control"} %>
  <%= f.input :company, label: "Company", input_html: {class: "form-control"} %>
  <%= f.input :company_size, label: "Company size", input_html: {class: "form-control"} %>
  <%= f.input :company_type, label: "Company stage", input_html: {class: "form-control"} %>
  <%= f.input :tech, label: "What is the tech stack", input_html: {class: "form-control"} %>
  <%= f.input :benefits, label: "What are the benefits", input_html: {class: "form-control"} %>
  <%= f.input :perks, label: "Any perks", input_html: {class: "form-control"} %>
  <%= f.input :remote, inline_label: "Work remotely possible?", input_html: {class: "form-control"} %>
  <%= f.input :relocation, inline_label: "Relocation assistance offered?", input_html: {class: "form-control"} %>
  <%= f.input :public_transit, inline_label: "Easy access from public transit?", input_html: {class: "form-control"} %>
  <br>
  <%= f.input :sponsored, inline_label: "Place this ad at the top for an additional fee", input_html: {class: "form-control"} %>
  <br>
  <%= f.button :submit %>
<% end %>
